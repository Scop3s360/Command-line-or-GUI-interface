from datetime import datetime

class TodoList:
    def __init__(self):
        self.tasks = []
            
    def add_task(self, task):
        timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
        self.tasks.append({
            "task": f"{task} (Added: {timestamp})",
            "completed": False
        })
        print(f"Task '{task}' added successfully!")
                    
    def update_task(self, task_index, new_task):
        adjusted_index = task_index - 1  # Subtract 1 from user input to match zero-based indexing
        if 0 <= adjusted_index < len(self.tasks):
            original_task = self.tasks[adjusted_index]["task"]
            timestamp_part = original_task.split("(Added: ")[1]
            updated_task = f"{new_task} (Added: {timestamp_part}"
            self.tasks[adjusted_index] = {
                "task": updated_task,
                "completed": False
            }
            print(f"Task updated to '{new_task}'")
        else:
            print("Invalid task number. Please try again.")

    def view_tasks(self):
        if not self.tasks:
            print("No tasks in the list!")
            return
        
        print("Your Tasks:")
        for index, task in enumerate(self.tasks, 1):
            status = "âœ“" if task["completed"] else " "
            print(f"{index}. [{status}] {task['task']}")

    def complete_task(self, task_index):
        try:
            index = int(task_index) - 1
            if 0 <= index < len(self.tasks):
                self.tasks[index]["completed"] = True
                print(f"Task '{self.tasks[index]['task']}' marked as complete!")
            else:
                print("Invalid task number!")
        except ValueError:
            print("Please enter a valid number!")

    def delete_task(self, task_index):
        try:
            index = int(task_index) - 1
            if 0 <= index < len(self.tasks):
                deleted_task = self.tasks.pop(index)
                print(f"Task '{deleted_task['task']}' deleted!")
            else:
                print("Invalid task number!")
        except ValueError:
            print("Please enter a valid number!")

def main():
    todo = TodoList()
    
    while True:
        print("=== Todo List Menu ===")
        print("1. Add Task")
        print("2. View Tasks")
        print("3. Amend Task")
        print("4. Complete Task")
        print("5. Delete Task")
        print("6. Exit")
        
        choice = input("Enter your choice (1-5):")

        if choice == '1':
            task = input("Enter task:")
            todo.add_task(task)
            
        elif choice == '2':
            todo.view_tasks()
        
        elif choice == '3':
            try:
                task_index = int(input("Enter the number of the task you want to amend: "))
                new_task = input("Enter the new task text: ")
                todo.update_task(task_index, new_task)
            except ValueError:
                print("Please enter a valid number.")

        elif choice == '4':
            todo.view_tasks()
            task_num = input("Enter task number to complete: ")
            todo.complete_task(task_num)
            
        elif choice == '5':
            todo.view_tasks()
            task_num = input("Enter task number to delete: ")
            todo.delete_task(task_num)
            
        elif choice == '6':
            print("Goodbye!")
            break
            
        else:
            print("Invalid choice! Please enter a number between 1 and 5.")

if __name__ == "__main__":
    main()
